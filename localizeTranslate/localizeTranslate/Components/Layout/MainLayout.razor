@inherits LayoutComponentBase
@inject IStringLocalizer<localizeTranslate.SharedResource> L

<div class="page">
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="">
                <span class="text-primary">T</span>R Portfolio
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            <i class="bi bi-house-door me-1"></i> @L["Nav_Home"]
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="weather">
                            <i class="bi bi-cloud-sun me-1"></i> @L["Nav_Weather"]
                        </NavLink>
                    </li>
                </ul>

                <div class="d-flex align-items-center">
                    <CultureSelector />
                </div>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <article>
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">&#x1f5d9;</span>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
